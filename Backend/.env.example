# Database Configuration
DB_SERVER=127.0.0.1
DB_PORT=1433
DB_NAME=ActoEngine
DB_USER=sa
DB_PASSWORD=your_secure_password_here
DB_TRUST_CERT=true # Set to true to trust the server certificate (useful for local development with self-signed certs)

# Database Settings
DB_COMMAND_TIMEOUT=30
DB_MAX_RETRY_COUNT=3
DB_MAX_POOL_SIZE=100

# Database Seeding
DB_SEEDING_ENABLED=true
DB_SEED_DEVELOPMENT_DATA=true
SEED_ADMIN_PASSWORD=your_admin_password_here

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
# Development: Use HTTP for local development
ASPNETCORE_URLS=http://localhost:5093
# Production: MUST use HTTPS! Example:
# ASPNETCORE_URLS=https://localhost:5093;http://localhost:5093
# Or for production deployment:
# ASPNETCORE_URLS=https://+:443;http://+:80
# Note: Cookie Secure flag is now always enabled, so HTTPS is required
