# Database Configuration
DB_SERVER=127.0.0.1
DB_PORT=1433
DB_NAME=ActoEngine
DB_USER=app_user
# DB_PASSWORD: 
#   - For Docker: Store in secrets/DB_PASSWORD file (see README.MD)
#   - For local dev: Uncomment and set your password below
# DB_PASSWORD=your_secure_password_here
DB_TRUST_CERT=true

# Database Settings
DB_COMMAND_TIMEOUT=30
DB_MAX_RETRY_COUNT=3
DB_MAX_POOL_SIZE=100

# Database Seeding
DB_SEEDING_ENABLED=true
DB_SEED_DEVELOPMENT_DATA=true
SEED_ADMIN_PASSWORD=your_admin_password_here

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
# For Docker containers, use + to bind all interfaces
ASPNETCORE_URLS=http://+:5093
# For local development without Docker:
# ASPNETCORE_URLS=http://localhost:5093

# Frontend Settings
VITE_API_BASE_URL=http://localhost:5093
