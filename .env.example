# Database Configuration
# NOTE: Make sure the password meets SQL Server requirements (uppercase, lowercase, number, symbol)
DB_PASSWORD=your_secure_password_here
DB_NAME=ActoEngine
# Use default sa for initial setup, but switch to app_user for running the app
DB_USER=app_user
DB_PORT=1433

# SQL Server SA account password (used for database administration)
# Must meet complexity requirements: uppercase, lowercase, number, symbol, 8+ chars
SA_PASSWORD=your_strong_sa_password_here

# WARNING: true disables TLS validation. DEV ONLY! Never use in production.
DB_TRUST_CERT=true

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5093

# Seeding
SEED_ADMIN_PASSWORD=change_me_before_running

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5093/api
